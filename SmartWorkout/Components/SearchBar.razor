@typeparam T

<input class="form-control" style="max-width:600px" placeholder="Search..." @bind="searchItem"/>

<button class="form-control" style="max-width:200px" @onclick=OnSearchClicked>
    Search
</button>

@code {
    [Parameter]
    public List<T> Items { get; set; }

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private string searchItem;

    private async Task OnSearchClicked()
    {
        await OnSearch.InvokeAsync(searchItem);
    }
}
