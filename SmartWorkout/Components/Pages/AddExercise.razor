@page "/addexercise"
@using SmartWorkout.DBAccess.Entities
@using SmartWorkout.DataAccess.Repositories

@inject IGenericRepository<Exercise> repo;
@inject NavigationManager Navigation;

<h3>AddExercise</h3>

<EditForm Model="newExercise" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3 w-50">
        <label for="name">Exercise Name</label>
        <InputText id="name" class="form-control" @bind-Value="newExercise.Name"/>
        <ValidationMessage For="@(() => newExercise.Name)" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Add Exercise</button>
    </div>
</EditForm>

@code {
    private Exercise newExercise = new Exercise();

    protected override void OnInitialized() => newExercise ??= new();

    private async Task Submit()
    {
        await repo.AddAsync(newExercise);
        Navigation.NavigateTo("/exercises");
    }
}
